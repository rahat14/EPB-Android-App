<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_4sdp"
    app:cardBackgroundColor="@color/white"
    android:elevation="0dp"
    app:cardElevation="0dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_88sdp"
            android:layout_height="@dimen/_88sdp"
            android:scaleType="centerCrop"
            android:outlineAmbientShadowColor="#FFC529"
            android:outlineSpotShadowColor="#FFC529"
            tools:targetApi="p"
            android:src="@drawable/placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/delete_action"
                android:layout_gravity="center_vertical|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sharp_close_24"/>

            <TextView
                android:id="@+id/nameTv"
                android:layout_marginTop="-10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/cabin_medium"
                android:layout_marginStart="@dimen/_8sdp"
                />

            <TextView
                android:id="@+id/addOnTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="details"

                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/cabin_medium"
                android:textColor="@color/textColor"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_gravity="center|start"/>
            <LinearLayout
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:layout_marginTop="@dimen/_4sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="à§³"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/cabin_medium"
                    android:layout_gravity="bottom|center"/>

                <TextView
                    android:id="@+id/subtotalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/textColor"
                    android:textSize="24sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/cabin_medium"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:gravity="end|center"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/minusBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:clickable="true"
                        android:layout_height="@dimen/_24sdp"
                        android:background="@drawable/ic_baseline_remove_circle_outline_24" />
                    <EditText
                        android:id="@+id/qtyTv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_32sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:backgroundTint="@color/white"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:fontFamily="@font/cabin_medium"
                        android:textColor="@color/textColor"
                        android:inputType="number"
                        android:text="0"
                        android:textSize="16sp"
                        />
                    <ImageButton
                        android:id="@+id/addBtn"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:background="@drawable/ic_baseline_add_circle_24"
                        tools:ignore="UnusedAttribute" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>