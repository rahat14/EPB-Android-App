<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="115dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="16dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="16sp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1.7"
            android:background="@drawable/ic_business_report"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="wrap_content">


                <TextView

                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_medium"
                    android:text="Walk In Customer"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/_2sdp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_medium"
                    android:text="Pending"
                    android:background="#88000000"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="Supplier: Demo"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="Buy Price: $120"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="Sell Price: $100"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cabin_medium"
                android:text="03:23 PM 19-9-2020"
                android:textColor="@color/red"
                android:textSize="12sp" />


        </LinearLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_baseline_create_24" />

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>